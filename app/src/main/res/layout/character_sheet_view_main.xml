<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#575757"
    tools:context=".CharSheetViewActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="325dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="@string/character_sheets"
        android:textColor="#74F6D1"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <ScrollView
        android:id="@+id/characterList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#399886"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle"
        app:layout_constraintVertical_bias="0.403">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/createCharButton"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_margin="25dp"
                android:layout_marginTop="50dp"
                android:background="#575757"
                android:onClick="launchSelectedCharView"
                android:shadowColor="#000000"
                android:shadowDx="10"
                android:shadowDy="3"
                android:shadowRadius="10"
                android:text="@string/test_here_button"
                android:textColor="#74F6D1"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>