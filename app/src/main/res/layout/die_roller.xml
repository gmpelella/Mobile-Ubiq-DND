<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#575757"
    tools:context=".DieRollerActivity">

    <TextView
        android:id="@+id/dice_roller_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/dice_roller_main_title"
        android:textColor="#74F6D1"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/d20button"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginBottom="108dp"
        android:background="#979797"
        android:onClick="d20"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="d20"
        android:textColor="#74F6D1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d10button"
        app:layout_constraintVertical_bias="0.538" />

    <Button
        android:id="@+id/d12button"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="108dp"
        android:background="#979797"
        android:onClick="d12"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="d12"
        android:textColor="#74F6D1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toEndOf="@+id/d20button"
        app:layout_constraintTop_toBottomOf="@+id/d8button"
        app:layout_constraintVertical_bias="0.538" />

    <Button
        android:id="@+id/d8button"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="128dp"
        android:background="#979797"
        android:onClick="d8"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="d8"
        android:textColor="#74F6D1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/d12button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/d10button"
        app:layout_constraintTop_toBottomOf="@+id/d4button"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/d10button"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginBottom="128dp"
        android:background="#979797"
        android:onClick="d10"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="d10"
        android:textColor="#74F6D1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/d20button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d6button"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/d6button"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:background="#979797"
        android:onClick="d6"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="d6"
        android:textColor="#74F6D1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/d10button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice_roller_main_title"
        app:layout_constraintVertical_bias="0.326" />

    <Button
        android:id="@+id/d4button"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#979797"
        android:onClick="d4"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="d4"
        android:textColor="#74F6D1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/d8button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/d6button"
        app:layout_constraintTop_toBottomOf="@+id/dice_roller_main_title"
        app:layout_constraintVertical_bias="0.326" />

</androidx.constraintlayout.widget.ConstraintLayout>